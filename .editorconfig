# http://editorconfig.org/
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
trim_trailing_whitespace = false
indent_size = 4

# match most webdev files
[*.{css,styl,sass,scss,js,html}]
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
